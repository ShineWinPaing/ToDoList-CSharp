@{
    ViewData["Title"] = "Verify Email";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <h2 class="text-center">Verify Your Email</h2>
        <p class="text-center">An OTP has been sent to <strong>@ViewBag.Email</strong></p>
        <hr />

        <form asp-action="Verify" method="post">
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="form-group">
                <label>Enter OTP</label>
              
                <input name="otp" class="form-control text-center"
                       style="font-size: 24px; letter-spacing: 5px;"
                       placeholder="000000" maxlength="6" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-primary w-100 mt-3">Verify Account</button>
        </form>
    </div>
</div>