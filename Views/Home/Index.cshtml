@model IEnumerable<ToDoList.Models.ListItemModel>

@{
    ViewData["Title"] = "My Todo List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "Done" : "Not Yet")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?')">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
               
            </tr>
        
        }
    </tbody>
    <div class="d-flex justify-content-center align-items-center position-relative my-4">
        <div style="position: absolute; left: 0;">
            <a asp-action="Create" class="btn btn-primary">Add New Task</a>

        </div>

        <div style="position: absolute; right: 0;">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
        </div>
    </div>
</table>
