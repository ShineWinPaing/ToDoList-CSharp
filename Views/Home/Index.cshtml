@model IEnumerable<ToDoList.Models.ListItemModel>

@{
    ViewData["Title"] = "My Dashboard";
}

<style>
    body {
        background-color: #f4f7f6;
    }

    .calendar-card {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        background: #ffffff;
    }

    .fc-toolbar-title {
        font-weight: 800 !important;
        color: #2d3748;
        text-transform: capitalize;
    }

    .fc-button-primary {
        background-color: #5a67d8 !important;
        border: none !important;
        padding: 8px 16px !important;
        border-radius: 10px !important;
        font-weight: 600 !important;
    }

    .fc-event {
        border-radius: 6px !important;
        padding: 2px 5px !important;
        border: none !important;
        font-weight: 500 !important;
    }
</style>

<div class="container py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="fw-bold mb-0">My Dashboard</h1>
            <p class="text-muted">Welcome back! Here is what's on your plate.</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm px-4" style="border-radius: 12px;">
                + New Task
            </a>
        </div>
    </div>

    <div class="card calendar-card mb-5">
        <div class="card-body p-4">
            <div id='calendar'></div>
        </div>
    </div>

    <div class="d-flex align-items-center mb-3">
        <h3 class="fw-bold mb-0">Task Details</h3>
    </div>
    <div class="card shadow-sm border-0" style="border-radius: 1rem;">
        <table class="table table-hover mb-0">
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 650,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek'
                },
                events: '/Home/GetCalendarTasks',
                dateClick: function(info) {
                    window.location.href = '/Home/Create?date=' + info.dateStr;
                },
                eventClick: function(info) {
                    window.location.href = '/Home/Edit/' + info.event.id;
                }
            });
            calendar.render();
        });
    </script>
}